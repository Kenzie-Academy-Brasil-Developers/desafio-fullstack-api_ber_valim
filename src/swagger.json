              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/createClientResponse"
                },
                "examples": {
                  "client": {
                    "value": {
                      "id": "22826d08-10d6-4191-93d4-747c5d824a5a",
                      "fullName": "Abel",
                      "email": "abel@gmail.com",
