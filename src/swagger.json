                  "NotFoundError": {
                    "value": {
                      "message": "Client not found"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "examples": {
                  "missingTokenError": {
                    "value": {
                      "message": "Missing Bearer Token"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "examples": {
                  "permissionError": {
                    "value": {
                      "message": "Insufficient Permissions"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "JWT": ["read:clients", "admin"]
          }
        ]
